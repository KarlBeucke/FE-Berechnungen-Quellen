<Window x:Class="FE_Berechnungen.Wärmeberechnung.ModelldatenLesen.ZeitintegrationNeu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Zeitintegration für Wärmefluss" Height="320" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150*" />
            <ColumnDefinition Width="60*" />

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="80" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>

        <RichTextBox Grid.Row="0" Grid.Column="0" Margin="0,10,0,4" BorderThickness="0,0,0,0">
            <FlowDocument>
                <Paragraph FontFamily="Segue">
                    Maximalzeit für Integration t
                    <Run BaselineAlignment="Subscript" FontSize="8">max</Run>
                    [s]
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <TextBox Name="Maximalzeit" Grid.Row="0" Grid.Column="1" Margin="4,0,15,0" Height="20"
                 VerticalAlignment="Center" />

        <Label Grid.Row="1" Grid.Column="0" Padding="0,0,0,0" Margin="6,6,2,7">Anzahl Eigenwerte in Lösung</Label>
        <TextBox Name="Eigenlösung" Grid.Row="1" Grid.Column="1" Margin="4,0,15,0" Height="20"
                 VerticalAlignment="Center" />

        <Label Grid.Row="2" Grid.Column="0" Padding="0,0,0,0" Margin="5,1,0,32">Integrationsparameter α</Label>
        <Label Grid.Row="2" Grid.Column="0" Margin="10,18,2,20" FontSize="8"
               Padding="0,0,0,0" Content="(0    &#x2264; α &#x003C; 0,5  bedingt stabil )" />
        <Label Grid.Row="2" Grid.Column="0" Margin="10,29,10,7" FontSize="8"
               Padding="0,0,0,0" Content="(0,5 &#x2264; α &#x2264; 1     unbedingt stabil )" />
        <TextBox Name="Parameter" Grid.Row="2" Grid.Column="1" Margin="4,0,14,0" Height="20" VerticalAlignment="Center" />

        <Label Grid.Row="3" Grid.Column="0" Padding="0,0,0,0" Margin="7,2,60,32" Grid.ColumnSpan="2">
            Zeitintervall für Integration Δt [s]
        </Label>
        <RichTextBox Grid.Row="3" Grid.Column="0" Margin="6,18,66,21" BorderThickness="0,0,0,0">
            <FlowDocument>
                <Paragraph FontFamily="Segue" FontSize="8">
                    Δt
                    <Run BaselineAlignment="Subscript" FontSize="6">kr</Run>
                    = 2 / ( β
                    <Run BaselineAlignment="Subscript" FontSize="6">max</Run>
                    * (1 - 2α))
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <RichTextBox Grid.Row="3" Grid.Column="0" Margin="6,30,20,8" BorderThickness="0,0,0,0">
            <FlowDocument>
                <Paragraph FontFamily="Segue" FontSize="8">
                    mit β
                    <Run BaselineAlignment="Subscript" FontSize="6">max</Run>
                    = größter Eigenwert in Lösung
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <TextBox Name="Zeitintervall" Grid.Row="3" Grid.Column="1" Margin="4,0,15,0" Height="20"
                 VerticalAlignment="Center"
                 MouseDoubleClick="ZeitintervallBerechnen" />
        <Label Grid.Row="3" Grid.Column="1" Margin="2,38,1,0" Height="9" VerticalAlignment="Top"
               FontSize="6" Padding="0,0,0,0">
            Doppelclick für Δt kritisch
        </Label>

        <Label Grid.Row="4" Grid.Column="0" Padding="0,0,0,0" Margin="6,3,2,0" 
               VerticalAlignment="Top" Content="Anfangsbedingungen" />
        <Label Grid.Row="4" Grid.Column="0" Padding="0,0,0,0" Margin="6,20,8,44"
               FontSize="10" Content="stationäre Lösung als Anfangsbedingung" />
        <CheckBox x:Name="StationäreLösung" Grid.Row="4" Grid.Column="1" Margin="6,20,8,44"
                  VerticalAlignment="Top"/>
        <Label Grid.Row="4" Grid.Column="0" Padding="0,0,0,0" Margin="6,40,133,24"
               FontSize="10" Content="Gesamtanzahl = " />
        <TextBox Name="Gesamt" Grid.Row="4" Grid.Column="0" Padding="0,0,0,0" Margin="80,40,95,0"
                 VerticalAlignment="Top" Height="18" />

        <TextBox Name="Anfangsbedingungen" Grid.Row="4" Grid.Column="1" Margin="5,40,20,20"
                 MouseDoubleClick="AnfangsbedingungNext"  KeyUp="AnfangsbedingungEdit" />
        <TextBox Grid.Row="4" Grid.Column="1" Margin="0,60,0,0" Height="11" VerticalAlignment="Top"
                 FontSize="6" Padding="0,0,0,0" HorizontalAlignment="Center" Width="78"
                 Text="Doppelklick für Traversieren" BorderThickness="0,0,0,0" />
        <TextBox Grid.Row="4" FontSize="6" Padding="0,0,0,0" BorderThickness="0,0,0,0"
                 Text="aller Anfangsbedingungen" Margin="4,69,0,1" Grid.Column="1" HorizontalAlignment="Left"
                 Width="74" RenderTransformOrigin="0.547,3.863"/>

        <Separator Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,49,0,0"/>

        <Button Grid.Column="1" Grid.Row="5" Height="25" Margin="43,5,3,0"
                Click="BtnDialogOk_Click" VerticalAlignment="Top" HorizontalContentAlignment="Center">
            _Ok
        </Button>
        <Button Grid.Column="0" IsDefault="True" Grid.Row="5" Height="25" Margin="180,5,0,0"
                Click="BtnDialogCancel_Click" VerticalAlignment="Top" HorizontalAlignment="Left"
                HorizontalContentAlignment="Center"
                Width="62" Grid.ColumnSpan="2">
            _Abbrechen
        </Button>
    </Grid>
</Window>