<Window x:Class="FE_Berechnungen.Wärmeberechnung.ModelldatenLesen.ZeitRandbedingungNeu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Neue zeitabhängige Randtemperatur" Height="400" Width="399">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="50" />
            <RowDefinition Height="20" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="80" />
            <RowDefinition Height="50" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,0,0">
            Definition zeitabhängiger Randtemperaturen an einem Knoten
        </Label>
        <Label  Grid.Column="0" Margin="0,26,0,6" Grid.RowSpan="2">Randbedingung Id:</Label>
        <Label Grid.Row="1" Grid.Column="0" VerticalAlignment="Top" Margin="0,12,0,0" FontSize="8" Height="23" Grid.RowSpan="2">(ggf. generiert aus "zRb"+Knoten ID)</Label>
        <TextBox Name="RandbedingungId" Grid.Row="1" Grid.Column="1" Margin="10,0,0,0" Height="19"
                 VerticalAlignment="Center" HorizontalAlignment="Left" Width="100" LostFocus="RandbedingungIdLostFocus" />
        <Label Grid.Row="1" Grid.Column="0" Margin="0,28,0,29" Grid.RowSpan="2">Knoten Id:</Label>
        <Label Grid.Row="2" Grid.Column="0" VerticalAlignment="Top" Margin="0,14,0,0" FontSize="8" Height="19">(click vorhandene Knoten ID)</Label>
        <Label Grid.Row="2" Grid.Column="0" Margin="0,26,0,4" FontSize="8" 
        >(Doppelclick für neue Knotenposition)</Label>
        <TextBox Name="KnotenId" Grid.Row="2" Grid.Column="1" Margin="10,0,0,0" Height="19"
                 VerticalAlignment="Center" HorizontalAlignment="Left" Width="40" LostFocus="KnotenIdLostFocus" 
                 MouseDoubleClick="KnotenPositionNeu"/>

        <Separator Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Bottom" />
        <Separator Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Bottom" Margin="0,0,0,1" />
        <Label Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Center" FontSize="8" Height="21">
            (click vorhandene zeitabhängige Randbedingung ID zur Übernahme der Definitionswerte)</Label>

        <Label Grid.Row="4" Grid.Column="0" Margin="0,0.4,0.2,31" Grid.RowSpan="2">Daten aus Datei einlesen:</Label>
        <CheckBox Name="Datei" Grid.Row="4" Grid.Column="1" Margin="9.8,7.4,0,8.8" Height="15"
                  VerticalAlignment="Center" HorizontalAlignment="Left" Width="15" />
        <Separator Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Bottom" />

        <Label Grid.Row="5" Grid.Column="0" Margin="0,0.4,0.2,52.6" Grid.RowSpan="2">konstante Knotentemperatur:</Label>
        <TextBox Name="Konstant" Grid.Row="5" Grid.Column="1" Margin="10,0,0,8" Height="19"
                 VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="40" />
        <Separator Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Bottom" />

        <Label Grid.Row="6" Grid.Column="0" VerticalAlignment="Top" Height="28" Margin="0,0,0,0">harmonische Anregung:</Label>
        <Label Grid.Row="6" Grid.Column="0" VerticalAlignment="Top" Margin="0,18,0,0">Amplitude:</Label>
        <TextBox Name="Amplitude" Grid.Row="6" Grid.Column="1" Margin="10,20,0,0" Height="17"
                 VerticalAlignment="Top" HorizontalAlignment="Left" Width="40" />
        <Label Grid.Row="6" Grid.Column="0" VerticalAlignment="Top" Margin="0,36,0,0">Frequenz:</Label>
        <TextBox Name="Frequenz" Grid.Row="5" Grid.Column="1" Margin="10,40,0,0" Height="17"
                 VerticalAlignment="Top" HorizontalAlignment="Left" Width="40" />
        <Label Grid.Row="6" Grid.Column="0" VerticalAlignment="Top" Margin="0,54,0,0">Phasenwinkel:</Label>
        <TextBox Name="Winkel" Grid.Row="6" Grid.Column="1" Margin="10,60,0,0" Height="17"
                 VerticalAlignment="Top" HorizontalAlignment="Left" Width="40" />
        <Separator Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Bottom" Margin="0,0,0,49" />

        <Label Grid.Row="7" Grid.Column="0" VerticalAlignment="Top" Height="28" Margin="0,0,0,0">stückweise lineare Anregung:</Label>
        <Label Grid.Row="7" Grid.Column="0" VerticalAlignment="Top" Margin="0,18,0,0">Wertepaare (Zeit;Temperatur):</Label>
        <TextBox Name="Linear" Grid.Row="7" Grid.Column="1" Height="38" Margin="12,0,18,0"
                 VerticalAlignment="Center" HorizontalScrollBarVisibility="Visible" />
        <Separator Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" Width="420" VerticalAlignment="Bottom" />

        <Button Grid.Row="8" Grid.Column="0" Width="61" Margin="22,8,0,-14"
                Click="BtnLöschen_Click" HorizontalAlignment="Left">
            löschen
        </Button>
        <Button IsDefault="True" Grid.Row="8" Grid.Column="1" Width="35" Margin="0,10,92,-16"
                Click="BtnDialogOk_Click" HorizontalAlignment="Right">
            _Ok
        </Button>
        <Button Grid.Row="8" Width="70" Height="26" Margin="0,0,17,-15"
                Click="BtnDialogCancel_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" Grid.Column="1">
            _Abbrechen
        </Button>
    </Grid>
</Window>