<Window x:Class="FE_Berechnungen.Elastizitätsberechnung.ModelldatenLesen.KnotenKeys"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="vorhandene Knotendefinitionen" Height="220" Width="270">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="150" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <ListView Grid.Row="0" Margin="10" Name="KnotenKey" d:DataContext="{d:DesignData modell}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Id" Width="30" DisplayMemberBinding="{Binding Id}" />
                    <GridViewColumn Header="Freiheitsgrade" Width="50"
                                    DisplayMemberBinding="{Binding AnzahlKnotenfreiheitsgrade}" />
                    <GridViewColumn Header="x" Width="50" DisplayMemberBinding="{Binding Koordinaten[0]}" />
                    <GridViewColumn Header="y" Width="50" DisplayMemberBinding="{Binding Koordinaten[1]}" />
                    <GridViewColumn Header="z" Width="50" DisplayMemberBinding="{Binding Koordinaten[2]}" />
                </GridView>
            </ListView.View>
        </ListView>
        <Button Height="18" Margin="152,0,8,10" VerticalAlignment="Bottom" 
                Click="BtnDialogCancel_Click" Grid.Row="1">
            _schließen
        </Button>
    </Grid>
</Window>