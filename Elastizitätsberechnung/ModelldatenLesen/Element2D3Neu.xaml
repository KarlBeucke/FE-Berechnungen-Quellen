<Window x:Class="FE_Berechnungen.Elastizitätsberechnung.ModelldatenLesen.Element2D3Neu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Element in 2D mit 3 Knoten" Height="390" Width="320">
    <Grid Margin="0,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,-70,0">
            Eingabe neues, Editieren vorhandenes 2D3 Elementes
        </Label>

        <Label Grid.Row="0" Grid.Column="0" VerticalAlignment="Top" Margin="0,26,0,0" Height="30" Grid.RowSpan="2">Element ID:</Label>
        <Label Grid.Row="1" Grid.Column="0" Margin="0,11,0,24" FontSize="8" Grid.RowSpan="2">(ggf. generiert aus "E"+KnotenIDs)</Label>
        <TextBox Name="ElementId" Grid.Row="1" Grid.Column="1" Margin="10,0,-33,0" Height="20"
                 VerticalAlignment="Center"  LostFocus="ElementIdLostFocus" GotFocus="ElementIdGotFocus" />

        <Label Grid.Row="2" Grid.Column="0" Margin="0,0,0,2" Grid.RowSpan="2">Knoten 1 ID:</Label>
        <Label Grid.Row="2" Grid.Column="0" Margin="0,11,0,29" FontSize="8" Grid.RowSpan="2">(click vorhandene Knoten IDs)</Label>
        <TextBox Name="Knoten1Id" Grid.Row="2" Grid.Column="1" Margin="10,0,0,0" Height="20"
                 VerticalAlignment="Center" HorizontalAlignment="Left" Width="35"/>
        <Label Grid.Row="3" Grid.Column="0" Margin="0,5,0,0">Knoten 2 ID:</Label>
        <TextBox Name="Knoten2Id" Grid.Row="3" Grid.Column="1" Margin="10,0,0,0" Height="20" Width="35"
                 VerticalAlignment="Center" HorizontalAlignment="Left" />
        <Label Grid.Row="4" Grid.Column="0" Margin="0,2,0,0">Knoten 3 ID:</Label>
        <TextBox Name="Knoten3Id" Grid.Row="4" Grid.Column="1" Margin="10,0,0,0" Height="20"
                 VerticalAlignment="Center" HorizontalAlignment="Left" Width="35" />


        <Label Grid.Row="5" Grid.Column="0" Height="24" VerticalAlignment="Top">Material ID:</Label>
        <Label Grid.Row="5" Grid.Column="0" Margin="0,12,0,27" FontSize="8" Grid.RowSpan="2">(click vorhandene Element ID)</Label>
        <TextBox Name="MaterialId" Grid.Row="5" Grid.Column="1" Margin="10,0,0,0" Height="20" VerticalContentAlignment="Center"
                 VerticalAlignment="Center" HorizontalAlignment="Left" Width="35"  GotFocus="MaterialIdGotFocus" LostFocus="MaterialIdLostFocus" />

        <Label Grid.Row="6" Grid.Column="0" Margin="0,0,0,0">Elastizitätsmodul E:</Label>
        <TextBox Name="EModul" Grid.Row="6" Grid.Column="1" Margin="10,0,0,0" Height="15" VerticalAlignment="Center" />

        <Label Grid.Row="7" Grid.Column="0" Margin="0,0,0,0">Querdehnungszahl ν:</Label>
        <TextBox Name="Poisson" Grid.Row="7" Grid.Column="1" Margin="10,0,0,0" Height="15" VerticalAlignment="Center" />

        <Label Grid.Row="8" Grid.Column="0" Height="24" VerticalAlignment="Top">Querschnitt ID:</Label>
        <TextBox Name="QuerschnittId" Grid.Row="8" Grid.Column="1" Margin="10,0,0,0" Height="20" VerticalContentAlignment="Center"
                 VerticalAlignment="Center" HorizontalAlignment="Left" Width="35"  
                 GotFocus="QuerschnittIdGotFocus" LostFocus="QuerschnittIdLostFocus" />

        <Label Grid.Row="9" Grid.Column="0" Margin="0,0,0,0">Elementdicke t:</Label>
        <TextBox Name="Dicke" Grid.Row="9" Grid.Column="1" Margin="10,0,0,0" Height="15" VerticalAlignment="Center" />

        <Button Grid.Row="10" Grid.Column="0" Width="50" Height="26" Margin="5,0,0,0"
                Click="BtnLöschen_Click" HorizontalAlignment="Left" VerticalAlignment="Bottom">
            löschen
        </Button>
        <Button IsDefault="True" Grid.Row="10" Grid.Column="1" Width="35" Height="26" Margin="22.8,0,0,0"
                Click="BtnDialogOk_Click" HorizontalAlignment="Left" VerticalAlignment="Bottom">
            _Ok
        </Button>
        <Button Grid.Row="10" Height="26" Margin="65,0,-40,0" VerticalAlignment="Bottom"
                Click="BtnDialogCancel_Click" Grid.Column="1">
            _Abbrechen
        </Button>
    </Grid>
</Window>