<Window x:Class="FE_Berechnungen.Elastizitätsberechnung.ModelldatenLesen.Knoten3DNetzVariabel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="variables Knotennetz 3D definieren oder editieren" Height="530" Width="460">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="140*" />
            <RowDefinition Height="330*" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>
        <Label Name="Header" Grid.Row="0" Grid.RowSpan="3">
            Präfix für alle KnotenIds eingeben, Knoten Ids werden generiert
        </Label>

        <Grid Grid.Row="0" Margin="0,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60*" />
                <ColumnDefinition Width="50*" />
                <ColumnDefinition Width="50*" />
                <ColumnDefinition Width="50*" />
                <ColumnDefinition Width="50*" />
                <ColumnDefinition Width="50*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="60*" />
                <RowDefinition Height="40*" />
                <RowDefinition Height="40*" />
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Width="86" Margin="5,31,0,35" 
                   HorizontalAlignment="Left" Grid.RowSpan="2">Knoten Präfix</Label>
            <TextBox Name="Präfix" Grid.Row="0" Grid.Column="1" Height="20"
                VerticalAlignment="Top" HorizontalAlignment="Center" Width="32" Margin="0,34,0,0" />

            <Label Grid.Row="1" Grid.Column="0" Margin="5,8,16,2">Start x</Label>
            <TextBox Name="StartX" Grid.Row="1" Grid.Column="1" Height="20"
             VerticalAlignment="Center" HorizontalAlignment="Center" Width="40" />

            <Label Grid.Row="2" Grid.Column="0" Margin="5,6,21,9">Abstände</Label>
            <Label Grid.Row="2" Grid.Column="1" FontSize="10" Padding="0,0,0,0"
                Margin="5,0,55,24" Grid.ColumnSpan="2">
                getrennt durch ";"
            </Label>
            <Label Grid.Row="1" Grid.Column="2" FontSize="10" Margin="16,33,50,20" Grid.RowSpan="2" Grid.ColumnSpan="2">
                z.B. 1; 3; 6; 10
            </Label>
            <TextBox Grid.Row="2" Name="Inkrements" Grid.Column="1" Grid.ColumnSpan="2" Height="19"
             Margin="5,15,0,0"
             VerticalAlignment="Top" HorizontalAlignment="Left" Width="126"/>

            <Label Grid.Row="1" Grid.Column="2" Margin="5,6,0,5" HorizontalAlignment="Left" Width="58">
                Start y
            </Label>
            <TextBox Name="StartY" Grid.Row="1" Grid.Column="3" Height="22" Margin="5,0,0,0"
                VerticalAlignment="Center" HorizontalAlignment="Left" Width="40" />


            <Label Grid.Row="1" Grid.Column="4" Margin="5,6,0,2" HorizontalAlignment="Left" Width="81">
                Start z
            </Label>
            <TextBox Name="StartZ" Grid.Row="1" Grid.Column="5" Margin="5,0,0,0" Height="22"
                     VerticalAlignment="Center" HorizontalAlignment="Left" Width="40" />
        </Grid>

        <DataGrid Name="KnotenGrid" Grid.Column="0" Margin="0,0,0,0"
                  AlternatingRowBackground="Aqua" AutoGenerateColumns="False" d:DataContext="{d:DesignData modell}" Grid.Row="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header=" Knoten Id" Binding="{Binding Id}" />
                <DataGridTextColumn Header=" x-Koordinate" Binding="{Binding Koordinaten[0]}" />
                <DataGridTextColumn Header=" y-Koordinate" Binding="{Binding Koordinaten[1]}" />
                <DataGridTextColumn Header=" z-Koordinate" Binding="{Binding Koordinaten[2]}" />
            </DataGrid.Columns>
        </DataGrid>

        <Button Grid.Row="2" Grid.Column="0"  HorizontalAlignment="Left" Width="130" Margin="25,10,0,30"
                Click="BtnTabelleneintrag">
            _Knotennetz generieren
        </Button>
        <Button Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" Width="30" Margin="0,10,20,30"
                Click="BtnDialogOk_Click">
            _Ok
        </Button>
        <Button Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" Width="80" Margin="0,10,60,30"
                Click="BtnDialogCancel_Click">
            _Abbrechen
        </Button>
    </Grid>
</Window>