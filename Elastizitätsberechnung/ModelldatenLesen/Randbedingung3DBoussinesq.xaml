<Window x:Class="FE_Berechnungen.Elastizitätsberechnung.ModelldatenLesen.Randbedingung3DBoussinesq"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
                Title="Randbedingung 3D definieren/editieren" Height="500" Width="480">
    <Grid Margin="0,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180" />
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="60" />
            <RowDefinition Height="40" />
            <RowDefinition Height="158" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>
        <Label Name="Header" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,65,37" Grid.RowSpan="2">
            Randbedingung 3D Boussinesq neu definieren oder vorhandene editieren
        </Label>

        <Label Grid.Row="1" Grid.Column="0" Margin="0,5,0,0" 
               HorizontalAlignment="Left" VerticalAlignment="Top" Height="26" Width="145">Randbedingung Initial  ID:</Label>
        <TextBox Name="RandbedingungInitialId" Grid.Row="1" Grid.Column="1" Margin="15,0,0,0" Height="20"
                 VerticalAlignment="Center" HorizontalAlignment="Left" Width="32" />

        <Label Grid.Row="2" Grid.Column="0" Margin="0,5,0,0"
               HorizontalAlignment="Left" VerticalAlignment="Top" Height="26" Width="98">Knoten Initial ID:</Label>
        <TextBox Name="KnotenInitial" Grid.Row="2" Grid.Column="1" Margin="15,0,0,0" Height="20"
                 VerticalAlignment="Center" HorizontalAlignment="Left" Width="32" />

        <Label Grid.Row="2" Grid.Column="2" Margin="0,5,0,0"
               HorizontalAlignment="Left" VerticalAlignment="Top" Height="26" Width="46">Fläche:</Label>
        <TextBox Name="Fläche" Grid.Row="2" Grid.Column="3" Margin="15,0,0,0" Height="20"
                 VerticalAlignment="Center" HorizontalAlignment="Left" Width="49" />

        <Label Grid.Row="1" Grid.Column="2" Margin="0,5,0,0"
               HorizontalAlignment="Left" VerticalAlignment="Top" Height="26" Width="56">Material:</Label>
        <TextBox Name="Material" Grid.Row="1" Grid.Column="3" Margin="15,0,0,0" Height="20"
                 VerticalAlignment="Center" HorizontalAlignment="Left" Width="50" />

        <Label Grid.Row="3" Grid.Column="0"
               HorizontalAlignment="Left" VerticalAlignment="Top" Height="26" Width="69">Knotenlast:</Label>
        <Label Grid.Column="0" Grid.Row="3" Margin="0,15,0,0"
               VerticalAlignment="Top" HorizontalAlignment="Left" Height="26" Width="148" Grid.RowSpan="2">
            (Last Id oder 3 Lastwerte)
        </Label>
        <TextBox Name="Last" Grid.Row="3" Grid.Column="1" Margin="15,0,0,0" Height="20"
                 VerticalAlignment="Center" HorizontalAlignment="Left" Width="50" />
        <TextBox Name="Lasty" Grid.Row="3" Grid.Column="2" Margin="15,0,0,0" Height="20"
                 VerticalAlignment="Center" HorizontalAlignment="Left" Width="30" />
        <TextBox Name="Lastz" Grid.Row="3" Grid.Column="3" Margin="15,0,0,0" Height="20"
                 VerticalAlignment="Center" HorizontalAlignment="Left" Width="30" />

        <Label Grid.Row="4" Grid.Column="0"
               VerticalAlignment="Top" HorizontalAlignment="Left" Height="28" Width="85" Margin="4,8,0,0">
            Festhaltungen
        </Label>
        <Label Grid.Row="4" Grid.Column="0" Margin="2,0,0,6"
               VerticalAlignment="Bottom" HorizontalAlignment="Left" Height="28" Width="168">
            "x" und/oder "y" und/oder "z"
        </Label>
        <CheckBox Name="XFest" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" Margin="10,2,0,41">Festhaltung X</CheckBox>
        <CheckBox Name="YFest" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" Margin="10,21,0,19">Festhaltung Y</CheckBox>
        <CheckBox Name="ZFest" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" Margin="10,39,0,5">Festhaltung Z</CheckBox>

        <Label Grid.Row="5" Grid.Column="0"
               HorizontalAlignment="Left" VerticalAlignment="Center" Margin="7,0,0,0" Height="26" Width="73">Inkremente:</Label>
        <Label Grid.Row="4" Grid.Column="1" FontSize="10" Margin="10,55,0,0"
               HorizontalAlignment="Left" VerticalAlignment="Top" Height="25" Grid.RowSpan="2" Width="89">
            getrennt durch ";"
        </Label>
        <Label Grid.Row="4" Grid.Column="2" FontSize="10" Margin="0,55,0,0"
               HorizontalAlignment="Left" VerticalAlignment="Top" Height="21" Grid.RowSpan="2" Width="69">
            z.B. 1; 3; 7; 15
        </Label>
        <TextBox Grid.Row="5" Name="Inkremente" Grid.Column="1" Height="20" Margin="15,16,0,0"
                 Grid.ColumnSpan="2" VerticalAlignment="Top" HorizontalAlignment="Left" Width="150"/>

        <DataGrid Grid.Row="6" Name="RandbedingungenGrid" Grid.Column="0" Grid.ColumnSpan="4"
                  Height="160" VerticalAlignment="Top"
                  AlternatingRowBackground="Aqua" AutoGenerateColumns="False" d:DataContext="{d:DesignData modell}">
            <DataGrid.Columns>
                <DataGridTextColumn Header=" Lager Id" Binding="{Binding LagerId}" />
                <DataGridTextColumn Header=" Knoten Id" Binding="{Binding NodeId}" />
                <DataGridTextColumn Header=" Material" Binding="{Binding Material}" />
                <DataGridTextColumn Header=" Fläche" Binding="{Binding Face}" />
                <DataGridTextColumn Header=" u-x" Binding="{Binding Vordefiniert[0]}" />
                <DataGridTextColumn Header=" u-y" Binding="{Binding Vordefiniert[1]}" />
                <DataGridTextColumn Header=" u-z" Binding="{Binding Vordefiniert[2]}" />
            </DataGrid.Columns>
        </DataGrid>

        <Button Grid.Row="7" Grid.Column="0"  Width="164" Margin="5,0,0,0"
                Click="BtnTabelleneintrag" HorizontalAlignment="Left" VerticalAlignment="Top" Height="20">
            _Randbedingungen generieren
        </Button>
        <Button IsDefault="True" Grid.Row="7" Grid.Column="3" Width="35" Height="26" Margin="0,1,17,0"
                Click="BtnDialogOk_Click" HorizontalAlignment="Right" VerticalAlignment="Top">
            _Ok
        </Button>
        <Button Grid.Row="7" Grid.Column="2" Width="80" Height="26" Margin="0,1,60,0"
                Click="BtnDialogCancel_Click" HorizontalAlignment="Right" VerticalAlignment="Top" Grid.ColumnSpan="2">
            _Abbrechen
        </Button>
    </Grid>
</Window>