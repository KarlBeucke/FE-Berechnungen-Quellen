<Window x:Class="FE_Berechnungen.Elastizitätsberechnung.ModelldatenLesen.KnotenNetzÄquidistant"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="äquidistantes Knotennetz in 2D definieren oder editieren" Height="460" Width="440">
    <Grid Height="444" VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120" />
            <ColumnDefinition Width="40" />
            <ColumnDefinition Width="80" />
            <ColumnDefinition Width="40" />
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="40" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="230" />
            <RowDefinition Height="770" />
        </Grid.RowDefinitions>
        <Label Name="Header" Grid.Row="0" Grid.ColumnSpan="6" Margin="0,0,-40,37" Grid.RowSpan="2">
            Präfix für alle KnotenIds eingeben, Knoten Ids werden generiert
        </Label>

        <Label Grid.Row="1" Grid.Column="0" Margin="0,5,0,0">Knoten Präfix</Label>
        <TextBox Name="Präfix" Grid.Row="1" Grid.Column="1" Height="20"
                 VerticalAlignment="Center" HorizontalAlignment="Center" Width="32" />
        <Label Grid.Row="1" Grid.Column="2" Margin="0,5,75,0" Grid.ColumnSpan="3">Anzahl Freiheitsgrade</Label>
        <TextBox Name="AnzahlDof" Grid.Row="1" Grid.Column="4" Margin="5,0,0,0" Height="20"
                 VerticalAlignment="Center" HorizontalAlignment="Left" Width="33" />

        <Label Grid.Row="2" Grid.Column="0" Margin="0,6,0,4" HorizontalAlignment="Left" Width="32">1D:</Label>
        <Label Grid.Row="2" Grid.Column="0" Margin="0,5,35,10" HorizontalAlignment="Right" Width="104"
               Grid.ColumnSpan="2">
            Startkoordinate x
        </Label>
        <TextBox Name="StartX" Grid.Row="2" Grid.Column="1" Height="20"
                 VerticalAlignment="Center" HorizontalAlignment="Center" Width="32" />
        <Label Grid.Row="2" Grid.Column="2" Margin="4,5,0,10">x Inkrement</Label>
        <TextBox Name="InkrementX" Grid.Row="2" Grid.Column="3" Height="20"
                 VerticalAlignment="Center" HorizontalAlignment="Center" Width="34" />
        <Label Grid.Row="2" Grid.Column="4" Margin="0,5,0,5">Wiederholungen</Label>
        <TextBox Name="AnzahlX" Grid.Row="2" Grid.Column="5" Height="20"
                 VerticalAlignment="Center" HorizontalAlignment="Center" Width="32" />

        <Label Grid.Row="3" Grid.Column="0" Margin="0,6,0,4" HorizontalAlignment="Left" Width="32">2D:</Label>
        <Label Grid.Row="3" Grid.Column="0" Margin="0,5,36,10" HorizontalAlignment="Right" Width="103"
               Grid.ColumnSpan="2">
            Startkoordinate y
        </Label>
        <TextBox Name="StartY" Grid.Row="3" Grid.Column="1" Height="20"
                 VerticalAlignment="Center" HorizontalAlignment="Center" Width="32" />
        <Label Grid.Row="3" Grid.Column="2" Margin="4,5,0,10">y Inkrement</Label>
        <TextBox Name="InkrementY" Grid.Row="3" Grid.Column="3" Height="20"
                 VerticalAlignment="Center" HorizontalAlignment="Center" Width="34" />
        <Label Grid.Row="3" Grid.Column="4" Margin="0,5,0,5">Wiederholungen</Label>
        <TextBox Name="AnzahlY" Grid.Row="3" Grid.Column="5" Height="20"
                 VerticalAlignment="Center" HorizontalAlignment="Center" Width="32" />

        <DataGrid Name="KnotenGrid" Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="6" Margin="0,0,-39,0"
                  AlternatingRowBackground="Aqua" AutoGenerateColumns="False" d:DataContext="{d:DesignData modell}">
            <DataGrid.Columns>
                <DataGridTextColumn Header=" Knoten Id" Binding="{Binding Id}" />
                <DataGridTextColumn Header=" Anzahl DoF" Binding="{Binding AnzahlKnotenfreiheitsgrade}" />
                <DataGridTextColumn Header=" x-Koordinate" Binding="{Binding Koordinaten[0]}" />
                <DataGridTextColumn Header=" y-Koordinate" Binding="{Binding Koordinaten[1]}" />
            </DataGrid.Columns>
        </DataGrid>

        <Button Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Margin="8,14,21,730"
                Click="BtnTabelleneintrag">
            _Knotennetz generieren
        </Button>
        <Button Grid.Row="5" Grid.Column="5" Margin="0,14,2,731"
                Click="BtnDialogOk_Click">
            _Ok
        </Button>
        <Button Grid.Row="5" Grid.Column="4" Margin="8,14,5,730"
                Click="BtnDialogCancel_Click">
            _Abbrechen
        </Button>
    </Grid>
</Window>