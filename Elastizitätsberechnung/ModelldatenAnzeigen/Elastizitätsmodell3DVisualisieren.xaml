<Window x:Class="FE_Berechnungen.Elastizitätsberechnung.ModelldatenAnzeigen.Elastizitätsmodell3DVisualisieren"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Elastizitätsmodell3DVisualisieren" Height="860" Width="1435"
        KeyDown="Window_KeyDown">
    <ScrollViewer HorizontalScrollBarVisibility="Visible" Margin="0,0,0,0">
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top">
            <Grid HorizontalAlignment="Left" Width="1400" Height="800">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition Height="740*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1380*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0" Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="400"/>
                        <ColumnDefinition Width="590"/>
                        <ColumnDefinition Width="110"/>
                        <ColumnDefinition Width="130"/>
                        <ColumnDefinition Width="65"/>
                    </Grid.ColumnDefinitions>

                    <Grid Height="40" Width="146" HorizontalAlignment="Center" VerticalAlignment="Center" 
                          FlowDirection="LeftToRight" Background="LightCoral">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                        </Grid.ColumnDefinitions>
                        <Grid>
                            <TextBox Grid.Column="0" Margin="2,1,0,23" Padding="0,-3,0,0" Width="110" 
                                     HorizontalAlignment="Left">
                                Modell berechnen
                            </TextBox>
                            <Button Grid.Column="0" IsDefault="False" HorizontalAlignment="Center" VerticalAlignment="Top"
                                    Width="134" Click="OnBtnBerechnen_Click"
                                    Padding="10,-2,0,0" Height="18"
                                    Margin="0,20,0,0" VerticalContentAlignment="Center">
                                statische Berechnung
                            </Button>
                        </Grid>
                    </Grid>

                    <Grid Grid.Column="1" Height="40" VerticalAlignment="Center" FlowDirection="LeftToRight" 
                          Background="GreenYellow" HorizontalAlignment="Center" Width="410">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80" />
                            <ColumnDefinition Width="70" />
                            <ColumnDefinition Width="70" />
                            <ColumnDefinition Width="70" />
                            <ColumnDefinition Width="110" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40" />
                        </Grid.RowDefinitions>
                        <TextBox Grid.Column="0" Margin="6,1,58,23" Padding="0,-3,0,0" Grid.ColumnSpan="5">
                            Modelldefinitionen neu definieren und vorhandene editieren
                        </TextBox>
                        <Button Grid.Column="0" IsDefault="False" HorizontalAlignment="Left" VerticalAlignment="Top"
                                Width="70" Height="18" Click="BtnClickModell" Margin="8,20,0,0">
                            Modell
                        </Button>
                        <Menu Grid.Column="1" HorizontalAlignment="Center" Width="60" FlowDirection="LeftToRight"
                              Margin="0,22,0,0" Height="16" VerticalAlignment="Top">
                            <MenuItem Header="Knoten" Height="21" Width="55"
                                      Padding="5,0,0,0" VerticalAlignment="Center">
                                <MenuItem Header="Knoten" HorizontalAlignment="Left" Height="20" Width="250"
                                          Margin="0,0,0,0" Click="MenuKnotenNeu" />
                                <MenuItem Header="äquidistantes Knotennetz" HorizontalAlignment="Left" Height="20" Width="250"
                                          Margin="0,0,0,0" Click="MenuKnotenNetzÄquidistant" />
                                <MenuItem Header="variables Knotennetz" HorizontalAlignment="Left" Height="20" Width="250"
                                          Margin="0,0,0,0" Click="MenuKnotenNetzVariabel" />
                            </MenuItem>
                        </Menu>
                        <Menu Grid.Column="2" HorizontalAlignment="Center" Width="60" FlowDirection="LeftToRight"
                              Margin="0,22,0,0" Height="16" VerticalAlignment="Top">
                            <MenuItem Header="Elemente" Height="21" Width="65"
                                      Padding="5,0,0,0" VerticalAlignment="Center">
                                <MenuItem Header="Element3D8" HorizontalAlignment="Left" Height="20" Width="250"
                                          Margin="0,0,0,0" Click="MenuElement3D8Neu" />
                                <MenuItem Header="Element3D8Netz" HorizontalAlignment="Left" Height="20" Width="250"
                                          Margin="0,0,0,0" Click="MenuElement3D8Netz" />
                                <Separator></Separator>
                                <MenuItem Header="Material" HorizontalAlignment="Left" Height="20" Width="250"
                                          Margin="0,0,0,0" Click="MenuMaterialNeu" />
                            </MenuItem>
                        </Menu>
                        <Menu Grid.Column="3" HorizontalAlignment="Center" Width="60" FlowDirection="LeftToRight"
                              Margin="0,22,0,0" Height="16" VerticalAlignment="Top">
                            <MenuItem Header="Lasten" Height="20" Width="50"
                                      Padding="5,0,0,0" VerticalAlignment="Center">
                                <MenuItem Header="Knotenlast" HorizontalAlignment="Left" Height="20" Width="250"
                                          Margin="0,0,0,0" Click="MenuKnotenlastNeu" />
                            </MenuItem>
                        </Menu>

                        <Menu Grid.Column="4" HorizontalAlignment="Left" Width="105" FlowDirection="LeftToRight"
                              Margin="5,22,0,0" Height="16" VerticalAlignment="Top">
                            <MenuItem Header="Randbedingungen" Height="20" Width="110" Margin="-5,0,0,0"
                                      HorizontalAlignment="Left" VerticalAlignment="Center">
                                <MenuItem Header="Knoten Randbedingung" HorizontalAlignment="Left" Height="20" Width="250"
                                          Margin="0,0,0,0" Click="MenuKnotenRandbedingungNeu"/>
                                <MenuItem Header="Flächen Randbedingungen" HorizontalAlignment="Left" Height="20" Width="250"
                                          Margin="0,0,0,0" Click="MenuFlächenRandbedingungNeu"/>
                                <MenuItem Header="Randbedingungen Boussinesq" HorizontalAlignment="Left" Height="20" Width="250"
                                          Margin="0,0,0,0" Click="MenuBoussinesqRandbedingungNeu"/>
                            </MenuItem>
                        </Menu>
                    </Grid>

                    <Grid Grid.Column="2" Height="40" VerticalAlignment="Center"
                          FlowDirection="LeftToRight" Background="LightBlue">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="190" />
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="140" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40" />
                        </Grid.RowDefinitions>
                        <TextBox Grid.Column="0" Margin="2,1,0,23" Padding="0,-3,0,0" Grid.ColumnSpan="2">
                            Modelldefinitionen darstellen
                        </TextBox>

                        <CheckBox Name="Koordinaten" Grid.Column="0" Grid.Row="0" Height="16" HorizontalAlignment="Center" 
                                  Margin="0,20,0,0" VerticalAlignment="Top" Width="100"
                                  Checked="ShowKoordinaten" Unchecked="RemoveKoordinaten" IsChecked="True" Content="Koordinaten" />

                        <CheckBox Name="Oberflächen" Grid.Column="1" Grid.Row="0" Height="16" HorizontalAlignment="Center" 
                                  Margin="0,20,0,0" VerticalAlignment="Top" Width="96"
                                  Checked="ShowOberflächen" Unchecked="RemoveOberflächen" IsChecked="True" Content="Oberflächen" />

                        <CheckBox Name="Drahtmodell" Grid.Column="2" Grid.Row="0" Height="16" HorizontalAlignment="Left" 
                                  Margin="0,20,0,0" VerticalAlignment="Top" Width="92"
                                  Checked="ShowDrahtmodell" Unchecked="RemoveDrahtmodell" IsChecked="True" Content="Drahtmodell" />

                        <CheckBox Name="RandbedingungenFest" Grid.Column="3" Grid.Row="0" Height="16" HorizontalAlignment="Left" 
                                  Margin="0,5,0,0" VerticalAlignment="Top" Width="140"
                                  Checked="ShowRandbedingungenFest" Unchecked="RemoveRandbedingungenFest" IsChecked="True" Content="Randbedingungen fest" />

                        <CheckBox Name="RandbedingungenVor" Grid.Column="3" Grid.Row="0" Height="16" HorizontalAlignment="Center" 
                                  Margin="0,25,0,0" VerticalAlignment="Top" Width="188"
                                  Checked="ShowRandbedingungenVor" Unchecked="RemoveRandbedingungenVor" IsChecked="True" Content="Randbedingungen vordefiniert" />

                        <CheckBox Name="Knotenlasten" Grid.Column="4" Grid.Row="0" Height="16" HorizontalAlignment="Left" 
                                  Margin="0,20,0,0" VerticalAlignment="Top" Width="90"
                                  Checked="ShowKnotenlasten" Unchecked="RemoveKnotenlasten" IsChecked="True" Content="Knotenlasten" />
                    </Grid>

                    <Grid Grid.Column="3" Height="44" VerticalAlignment="Center" Margin="0,0,9,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="136"/>
                        </Grid.ColumnDefinitions>
                        <Grid>
                            <TextBlock Grid.Column="0" Name="Scrollbars" HorizontalAlignment="Left" Margin="5,5,0,0" 
                                       Grid.Row="0" Width="136">
                                <Bold>Bildlaufleisten</Bold>
                            </TextBlock>
                            <TextBox Grid.Row="0" Margin="5,20,0,0" 
                                     HorizontalAlignment="Left" Width="101" Height="20" VerticalAlignment="Top">
                                drehen / kippen
                            </TextBox>
                        </Grid>
                    </Grid>

                    <Grid Grid.Column="4" Height="44" VerticalAlignment="Center" Margin="0,0,9,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="136"/>
                        </Grid.ColumnDefinitions>
                        <Grid>
                            <TextBlock Grid.Column="0" Name="Tasten" HorizontalAlignment="Left" Margin="5,5,0,0" 
                                       Grid.Row="0" Width="136">
                                <Bold>PgUp / PgDn</Bold>
                            </TextBlock>
                            <TextBox Grid.Row="0" Margin="5,20,0,0" 
                                     HorizontalAlignment="Left" Width="100" Height="20" VerticalAlignment="Top">
                                Kameraabstand
                            </TextBox>
                        </Grid>
                    </Grid>
                </Grid>

                <RichTextBox Grid.Row="1" Grid.Column="0" Margin="0,0,20,0" Height="50"
                                     HorizontalAlignment="Right" VerticalAlignment="Top" Width="70">
                    <RichTextBox.Resources>
                        <Style TargetType="{x:Type Paragraph}">
                            <Setter Property="Margin" Value="0" />
                        </Style>
                    </RichTextBox.Resources>
                    <FlowDocument>
                        <Paragraph Foreground="Red">x-Achse</Paragraph>
                        <Paragraph Foreground="Green">y-Achse</Paragraph>
                        <Paragraph Foreground="Blue">z-Achse</Paragraph>
                    </FlowDocument>
                </RichTextBox>

                <Viewport3D Grid.Row="1" Grid.Column="0" Name="View3D" Margin="0,0,0,0"/>

                <ScrollBar Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Value="1.65" Minimum="0" Maximum="6.28"
                           Name="ScrTheta" Scroll="ScrThetaScroll" Height="20" VerticalAlignment="Bottom" Margin="0,0,0,0">
                </ScrollBar>
                <ScrollBar Grid.Column="0" Grid.Row="1" Orientation="Vertical" Value="0.13" Minimum="-1.57" Maximum="1.57" 
                           Name="ScrPhi" Scroll="ScrPhiScroll" HorizontalAlignment="Right" Margin="0,0,0,0" Width="20">
                </ScrollBar>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</Window>