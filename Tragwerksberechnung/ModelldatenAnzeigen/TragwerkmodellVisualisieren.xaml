<Window x:Class="FE_Berechnungen.Tragwerksberechnung.ModelldatenAnzeigen.TragwerkmodellVisualisieren"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Tragwerksmodell visualisieren" Height="720" Width="1300">
    <ScrollViewer HorizontalScrollBarVisibility="Auto" Margin="0,0,0,0">
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top">
            <Grid Row="0" Width="1200" Height="40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="160" />
                    <ColumnDefinition Width="160" />
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="90" />
                    <ColumnDefinition Width="90" />
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="80" />

                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                </Grid.RowDefinitions>

                <Grid Grid.Column="0" Grid.ColumnSpan="2" Height="40" VerticalAlignment="Center" FlowDirection="LeftToRight"
                      Background="LightCoral">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="150" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40" />
                    </Grid.RowDefinitions>
                    <TextBox Grid.Column="0" Margin="2,1,0,23" Padding="0,-3,0,0" Width="110" 
                             HorizontalAlignment="Left">
                        Modell berechnen
                    </TextBox>
                    <Button Grid.Column="0" IsDefault="False" HorizontalAlignment="Center" VerticalAlignment="Top"
                            Width="134" Click="OnBtnBerechnen_Click"
                            Padding="10,-2,0,0" Height="18"
                            Margin="0,20,0,0" VerticalContentAlignment="Center">
                        statische Berechnung
                    </Button>

                    <Menu Height="15" Grid.Column="1"
                            VerticalAlignment="Bottom" FlowDirection="LeftToRight" Margin="10,0,0,3"
                            Padding="0,0,0,0">
                        <MenuItem Header="dynamische Berechnung" Height="22" Width="144" HorizontalAlignment="Center" 
                                  VerticalAlignment="Center" Padding="5,0,0,0">
                            <MenuItem Header="dynamische Daten anzeigen" HorizontalAlignment="Left" Height="20" Width="250"
                                Margin="0,0,0,0" Click="DynamischeDaten" />
                            <MenuItem Header="dynamische Berechnung" HorizontalAlignment="Left" Height="20" Width="250"
                                Margin="0,0,0,0" Click="DynamischeBerechnung" />
                            <Separator HorizontalAlignment="Left" Height="4" Width="250" Margin="0,0,-0.2,0" />
                            <MenuItem Header="zeitabhängige Modellzustände visualisieren" HorizontalAlignment="Left" Height="20"
                                Width="350" Margin="0,0,0,0" Click="DynamischeModellzuständeVisualisieren" />
                            <MenuItem Header="Knotenzeitverläufe visualisieren" HorizontalAlignment="Left" Height="20" Width="300"
                                Margin="0,0,0,0" Click="KnotenzeitverläufeTragwerkVisualisieren" />
                        </MenuItem>
                    </Menu>
                </Grid>

                <Grid Column="2" Grid.ColumnSpan="6" Height="41" VerticalAlignment="Center" FlowDirection="LeftToRight"
                      Background="GreenYellow">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="80" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40" />
                    </Grid.RowDefinitions>

                    <TextBox Grid.Column="0" Margin="0,1,-11,21" Padding="0,0,0,0"
                             Grid.ColumnSpan="4">
                        Modelldefinitionen neu definieren und vorhandene editieren
                    </TextBox>
                    <Button Grid.Column="0"   IsDefault="False" HorizontalAlignment="Center" VerticalAlignment="Top"
                            Width="90" Click="OnBtnAbmessungen_Click" Padding="0,-2,0,0" Height="17"
                            Margin="0,22,0,0">
                        Abmessungen
                    </Button>
                    <Menu Grid.Column="1" HorizontalAlignment="Center" Width="70" FlowDirection="LeftToRight"
                          Margin="0,22,0,0" Height="16" VerticalAlignment="Top">
                        <MenuItem Header="Knoten" Height="21" Width="65"
                                  Padding="5,0,0,0" VerticalAlignment="Center">
                            <MenuItem Header="Knoten" HorizontalAlignment="Left" Height="20" Width="250"
                                      Margin="0,0,0,0" Click="MenuBalkenKnotenNeu" />
                            <MenuItem Header="Knotengruppe" HorizontalAlignment="Left" Height="20" Width="250"
                                      Margin="0,0,0,0" Click="MenuBalkenKnotenGruppeNeu" />
                            <MenuItem Header="äquidistantes Knotennetz" HorizontalAlignment="Left" Height="20"
                                      Width="250"
                                      Margin="0,0,0,0" Click="MenuBalkenKnotenNetzÄquidistant" />
                            <MenuItem Header="variables Knotennetz" HorizontalAlignment="Left" Height="20" Width="250"
                                      Margin="0,0,0,0" Click="MenuBalkenKnotenNetzVariabel" />
                        </MenuItem>
                    </Menu>
                    <Menu Grid.Column="2" HorizontalAlignment="Center" Width="70" FlowDirection="LeftToRight"
                          Margin="0,22,0,0" Height="16" VerticalAlignment="Top">
                        <MenuItem Header="Elemente" Height="21" Width="65"
                                  Padding="5,0,0,0" VerticalAlignment="Center">
                            <MenuItem Header="Element" HorizontalAlignment="Left" Height="20" Width="250"
                                      Margin="0,0,0,0" Click="MenuBalkenElementNeu" />
                            <MenuItem Header="Querschnitt" HorizontalAlignment="Left" Height="20" Width="250"
                                      Margin="0,0,0,0" Click="MenuQuerschnittNeu" />
                            <Separator />
                            <MenuItem Header="Material" HorizontalAlignment="Left" Height="20" Width="250"
                                      Margin="0,0,0,0" Click="MenuMaterialNeu" />
                        </MenuItem>
                    </Menu>
                    <Menu Grid.Column="3" HorizontalAlignment="Center" Width="70" FlowDirection="LeftToRight"
                          Margin="0,22,0,0" Height="16" VerticalAlignment="Top">
                        <MenuItem Header="Lasten" Height="21" Width="65"
                                  Padding="5,0,0,0" VerticalAlignment="Center">
                            <MenuItem Header="Knotenlast" HorizontalAlignment="Left" Height="20" Width="250"
                                      Margin="0,0,0,0" Click="MenuKnotenlastNeu" />
                            <MenuItem Header="Linienlast" HorizontalAlignment="Left" Height="20" Width="250"
                                      Margin="0,0,0,0" Click="MenuLinienlastNeu" />
                            <MenuItem Header="Punktlast" HorizontalAlignment="Left" Height="20" Width="250"
                                      Margin="0,0,0,0" Click="MenuPunktlastNeu" />
                        </MenuItem>
                    </Menu>
                    <Button Grid.Column="4" IsDefault="False" HorizontalAlignment="Center"
                            Width="60" Click="OnBtnLagerNeu_Click" Padding="0,-2,0,0"
                            Margin="0,22,0,1">
                        Lager
                    </Button>
                    <Menu Grid.Column="5" HorizontalAlignment="Center" Width="70" FlowDirection="LeftToRight"
                          Margin="0,22,0,0" Height="16" VerticalAlignment="Top">
                        <MenuItem Header="Dynamik" Height="17" Width="70"
                                  Padding="5,0,0,0" VerticalAlignment="Center">
                            <MenuItem Header="Zeitintegration" HorizontalAlignment="Left" Height="20" Width="250"
                                      Margin="0,0,0,0" Click="MenuZeitintegrationNeu" />
                            <MenuItem Header="Anfangsbedingungen" HorizontalAlignment="Left" Height="20" Width="250"
                                      Margin="0,0,0,0" Click="MenuAnfangswerteNeu" />
                            <MenuItem Header="zeitveränderliche Knotenlast" HorizontalAlignment="Left" Height="20" Width="250"
                                      Margin="0,0,0,0" Click="MenuZeitKnotenlastNeu" />
                            <MenuItem Header="Anregung visualisieren" HorizontalAlignment="Left" Height="20" Width="250"
                                      Margin="0,0,0,0" Click="MenuZeitAnregungNeu" />
                        </MenuItem>
                    </Menu>
                </Grid>

                <Grid Grid.Column="8" Grid.ColumnSpan="4" Height="40" VerticalAlignment="Center" FlowDirection="LeftToRight"
                      Background="LightBlue" Margin="0,0,-72,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="80" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40" />
                    </Grid.RowDefinitions>
                    <TextBox Grid.Column="0" Margin="2,0,0,23" Padding="0,0,0,0" Width="169" Grid.ColumnSpan="3" HorizontalAlignment="Left">
                        Modelldefinitionen darstellen
                    </TextBox>
                    <Button Grid.Column="0" IsDefault="False" HorizontalAlignment="Center" VerticalAlignment="Top"
                            Width="70" Click="OnBtnKnotenIDs_Click"
                            Padding="0,0,0,0" Height="19"
                            Margin="0,19,0,0" VerticalContentAlignment="Center">
                        Knoten IDs
                    </Button>
                    <Button Grid.Column="1" IsDefault="False" HorizontalAlignment="Center" VerticalAlignment="Top"
                            Width="70" Click="OnBtnElementIDs_Click" Padding="0,0,0,0" Height="18"
                            Margin="0,20,0,0" VerticalContentAlignment="Center">
                        Element IDs
                    </Button>
                    <Button Grid.Column="2" IsDefault="False" HorizontalAlignment="Center" VerticalAlignment="Top"
                            Width="70" Click="OnBtnLasten_Click" Padding="0,0,0,0" Height="17"
                            Margin="0,21,0,0" VerticalContentAlignment="Center">
                        Lasten
                    </Button>
                    <Button Grid.Column="3" IsDefault="False" HorizontalAlignment="Center" VerticalAlignment="Top"
                            Width="70" Click="OnBtnLager_Click" Padding="0,-2,0,0" Height="18"
                            Margin="0,21,0,0">
                        Lager
                    </Button>
                    <Button Grid.Column="4" IsDefault="False" HorizontalAlignment="Left" VerticalAlignment="Top"
                            Width="60" Click="OnBtnDynamik_Click" Padding="0,-2,0,0" Height="18"
                            Margin="5,21,0,0">
                        Dynamik
                    </Button>
                </Grid>
            </Grid>

            <Grid Row="1">
                <Canvas x:Name="VisualTragwerkModel" Height="650" Width="1280" Grid.ColumnSpan="4"
                        ScrollViewer.CanContentScroll="True" ScrollViewer.HorizontalScrollBarVisibility="Auto"
                        MouseLeftButtonDown="OnMouseLeftButtonDown">
                    <Popup x:Name="MyPopup" Placement="MousePoint">
                        <TextBlock x:Name="MyPopupText" Background="LightBlue" Foreground="Blue" Padding="10" />
                    </Popup>
                    <Ellipse Name="Pilot" Fill="Red" Width="10" Height="10"
                             MouseDown="Pilot_MouseDown"
                             MouseMove="Pilot_MouseMove"
                             MouseUp="Pilot_MouseUp" />
                </Canvas>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</Window>