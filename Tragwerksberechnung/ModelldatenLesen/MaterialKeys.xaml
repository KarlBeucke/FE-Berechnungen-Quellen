<Window x:Class="FE_Berechnungen.Tragwerksberechnung.ModelldatenLesen.MaterialKeys"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="vorhandene Materialdefinitionen" Height="200" Width="310">
    <Grid>
        <ListView Margin="10" Name="MaterialKey">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" Width="30" DisplayMemberBinding="{Binding MaterialId}" />
                    <GridViewColumn Header="E-Modul" Width="80" DisplayMemberBinding="{Binding MaterialWerte[0], StringFormat=G3}"/>
                    <GridViewColumn Header="Querdehnung" Width="80" DisplayMemberBinding="{Binding MaterialWerte[1], StringFormat=G3}"/>
                    <GridViewColumn Header="spez. Masse" Width="80" DisplayMemberBinding="{Binding MaterialWerte[2], StringFormat=G3}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
