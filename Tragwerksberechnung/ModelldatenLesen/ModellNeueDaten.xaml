<Window x:Class="FE_Berechnungen.Tragwerksberechnung.ModelldatenLesen.ModellNeueDaten"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Neue Modellfestlegungen eingeben" Height="270" Width="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="50" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <Label Grid.Column="0" Name="Titel" Grid.Row="0" Grid.ColumnSpan="4" Margin="0,0,0,37" Grid.RowSpan="2">
            Id, Raumdimension, Freiheitsgrade und maximale Modellabmessungen</Label>

        <Label Grid.Row="1" Grid.Column="0" Margin="0,5,0,0">Modell Id (Name):</Label>
        <TextBox Name="Name" Grid.Row="1" Grid.Column="1" Height="20" Grid.ColumnSpan="2" Margin="13,5,0,0"
                 VerticalAlignment="Center" HorizontalAlignment="Left" Width="159" />

        <Label Grid.Row="2" Grid.Column="0" Margin="0,5,0,0">Raumdimension:</Label>
        <TextBox Name="Dimension" Grid.Row="2" Grid.Column="1" Height="20"
                 VerticalAlignment="Center" HorizontalAlignment="Center" Width="32" />
        <Label Grid.Row="2" Grid.Column="2" Margin="0,0,0,0">Anzahl</Label>
        <Label Grid.Row="2" Grid.Column="2" Margin="0,10,0,0">Knotenfreiheitsgrade:</Label>
        <TextBox Name="Ndof" Grid.Row="2" Grid.Column="3" Height="20" Margin="13,13,0,0"
                 VerticalAlignment="Top" HorizontalAlignment="Left" Width="32" />


        <Label Grid.Row="3" Grid.Column="0" Margin="0,5,0,0">minimale x-Koordinate:</Label>
        <TextBox Name="MinX" Grid.Row="3" Grid.Column="1" Height="20"
                 VerticalAlignment="Center" HorizontalAlignment="Center" Width="32" />


        <Label Grid.Row="3" Grid.Column="2" Margin="0,5,0,0">maximale x-Koordinate:</Label>
        <TextBox Name="MaxX" Grid.Row="3" Grid.Column="3" Margin="13,0,0,0" Height="20"
                 VerticalAlignment="Center" HorizontalAlignment="Left" Width="32" />
        <Label Grid.Row="4" Grid.Column="0" Margin="0,5,0,0">minimale y-Koordinate:</Label>
        <TextBox Name="MinY" Grid.Row="4" Grid.Column="1" Height="20"
                 VerticalAlignment="Center" HorizontalAlignment="Center" Width="32" />
        <Label Grid.Row="4" Grid.Column="2" Margin="0,5,0,0">maximale y-Koordinate:</Label>
        <TextBox Name="MaxY" Grid.Row="4" Grid.Column="3" Margin="13,0,0,0" Height="20"
                 VerticalAlignment="Center" HorizontalAlignment="Left" Width="32" />

        <Button IsDefault="True" Grid.Row="5" Grid.Column="3" Height="26" Width="32" Margin="12,0,6,0"
                VerticalAlignment="Center" Click="BtnDialogOk_Click">
            _Ok
        </Button>
        <Button Grid.Row="5" Grid.Column="2" Width="70" Height="26"
                HorizontalAlignment="Right" VerticalAlignment="Center" Click="BtnDialogCancel_Click">
            _Abbrechen
        </Button>
    </Grid>
</Window>