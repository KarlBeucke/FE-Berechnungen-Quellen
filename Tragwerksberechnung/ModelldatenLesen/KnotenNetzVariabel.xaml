<Window x:Class="FE_Berechnungen.Tragwerksberechnung.ModelldatenLesen.KnotenNetzVariabel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="variables Knotennetz definieren oder editieren" Height="460" Width="460">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="460*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="145*" />
            <RowDefinition Height="260*" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>
        <Label Name="Header" Grid.Row="0" Grid.RowSpan="3">
            Präfix für alle KnotenIds eingeben, Knoten Ids werden generiert
        </Label>

        <Grid Grid.Row="0" Margin="0,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120*" />
                <ColumnDefinition Width="40*" />
                <ColumnDefinition Width="80*" />
                <ColumnDefinition Width="40*" />
                <ColumnDefinition Width="100*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50*" />
                <RowDefinition Height="40*" />
                <RowDefinition Height="40" />
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Width="120" Margin="0,26,0,0" HorizontalAlignment="Left">Knoten Präfix</Label>
            <TextBox Name="Präfix" Grid.Row="0" Grid.Column="1" Height="20" Margin="0,28,0,0"
                VerticalAlignment="Top" HorizontalAlignment="Center" Width="32" Grid.RowSpan="2" />
            <Label Grid.Row="0" Grid.Column="2" Margin="5,23,121,0" Grid.ColumnSpan="3">Anzahl Freiheitsgrade</Label>
            <TextBox Name="AnzahlDof" Grid.Row="0" Grid.Column="4" Margin="5,28,0,0" Height="20"
                VerticalAlignment="Top" HorizontalAlignment="Left" Width="33"/>

            <Label Grid.Row="1" Grid.Column="0" Margin="0,8,16,7">Startkoordinate x</Label>
            <TextBox Name="StartX" Grid.Row="1" Grid.Column="1" Height="20"
                     VerticalAlignment="Top" HorizontalAlignment="Center" Width="32" Margin="0,12,0,0" />
            <Label Grid.Row="1" Grid.Column="2" Margin="5,8,14,7">Abstände x</Label>
            <Label Grid.Row="0" Grid.Column="3" FontSize="10" Padding="0,0,0,0"
                   Margin="5,51,80,24" Grid.RowSpan="2" Grid.ColumnSpan="2">
                getrennt durch ";"
            </Label>
            <Label Grid.Row="0" Grid.Column="4" FontSize="10" Padding="0,0,0,0"
                   Margin="40,51,18,27" Grid.RowSpan="2">
                z.B. 1; 3; 6; 10
            </Label>
            <TextBox Name="InkrementsX" Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="2" Height="20"
                     Margin="5,15,0,0"
                     VerticalAlignment="Top" HorizontalAlignment="Left" Width="100" />

            <Label Grid.Row="2" Grid.Column="0" Margin="0,5,2,10" HorizontalAlignment="Left" Width="104">
                Startkoordinate y
            </Label>
            <TextBox Name="StartY" Grid.Row="2" Grid.Column="1" Height="22"
                VerticalAlignment="Center" HorizontalAlignment="Center" Width="32" />
            <Label Grid.Row="2" Grid.Column="2" Margin="4,5,44,5" Grid.ColumnSpan="2">Abstände y</Label>
            <TextBox Name="InkrementsY" Grid.Row="2" Grid.Column="3" Height="20" Width="100" 
                VerticalAlignment="Center" HorizontalAlignment="Left" Grid.ColumnSpan="2" Margin="7,0,0,0" />

        </Grid>

        <DataGrid Grid.Row="1" Name="KnotenGrid" Grid.Column="0" Margin="0,0,0,0"
                  AlternatingRowBackground="Aqua" AutoGenerateColumns="False" d:DataContext="{d:DesignData modell}">
            <DataGrid.Columns>
                <DataGridTextColumn Header=" Knoten Id" Binding="{Binding Id}" />
                <DataGridTextColumn Header=" Anzahl DoF" Binding="{Binding AnzahlKnotenfreiheitsgrade}" />
                <DataGridTextColumn Header=" x-Koordinate" Binding="{Binding Koordinaten[0]}" />
                <DataGridTextColumn Header=" y-Koordinate" Binding="{Binding Koordinaten[1]}" />
                <DataGridTextColumn Header=" z-Koordinate" Binding="{Binding Koordinaten[2]}" />
            </DataGrid.Columns>
        </DataGrid>

        <Button Grid.Row="2" Grid.Column="0"  HorizontalAlignment="Left" Width="130" Margin="25,10,0,30"
                Click="BtnTabelleneintrag">
            _Knotennetz generieren
        </Button>
        <Button Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" Width="30" Margin="0,10,20,30"
                Click="BtnDialogOk_Click">
            _Ok
        </Button>
        <Button Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" Width="80" Margin="0,10,60,30"
                Click="BtnDialogCancel_Click">
            _Abbrechen
        </Button>
    </Grid>
</Window>