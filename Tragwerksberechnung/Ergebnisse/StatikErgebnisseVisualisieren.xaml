<Window x:Class="FE_Berechnungen.Tragwerksberechnung.Ergebnisse.StatikErgebnisseVisualisieren"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Statik Ergebnisse visualisieren" Height="750" Width="1200">
    <ScrollViewer HorizontalScrollBarVisibility="Auto" Margin="0,0,0,0">
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top">
            <Grid Background="AliceBlue" Width="1200" Height="60">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="132" />
                    <ColumnDefinition Width="114" />
                    <ColumnDefinition Width="216.8" />
                    <ColumnDefinition Width="135.2" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60" />
                </Grid.RowDefinitions>
                <Button Name="BtnVerformung" Grid.Row="0" Grid.Column="0" Click="BtnVerformung_Click"
                        Margin="10,23,0,17" IsDefault="False"
                        MaxWidth="200" HorizontalAlignment="Left" Width="133">
                    Verformungszustand
                </Button>
                <Button Name="BtnNormalkräfte" Grid.Row="0" Grid.Column="1" Click="BtnNormalkraft_Click"
                        Margin="9.6,23,0,17" IsDefault="False"
                        MaxWidth="200" HorizontalAlignment="Left" Width="133">
                    Normalkräfte
                </Button>
                <Button Name="BtnQuerkräfte" Grid.Row="0" Grid.Column="2" Click="BtnQuerkraft_Click"
                        Margin="9.2,23,0,17" IsDefault="False"
                        MaxWidth="200" HorizontalAlignment="Left" Width="133">
                    Querkräfte
                </Button>
                <Button Name="BtnMomente" Grid.Row="0" Grid.Column="3" Click="BtnMomente_Click" Margin="10.8,23,0,17"
                        IsDefault="False"
                        MaxWidth="200" HorizontalAlignment="Left" Width="133">
                    Biegemomente
                </Button>
                <Button Name="BtnElementIDs" Grid.Row="0" Grid.Column="4" Click="BtnElementIDs_Click"
                        Margin="35.4,20,0,17" IsDefault="True"
                        MaxWidth="200" HorizontalAlignment="Left" Width="90">
                    ElementIDs
                </Button>
                <Button Name="BtnKnotenIDs" Grid.Row="0" Grid.Column="5" Click="BtnKnotenIDs_Click"
                        Margin="6.4,20,0,17" IsDefault="True"
                        MaxWidth="200" HorizontalAlignment="Left" Width="90">
                    KnotenIDs
                </Button>

                <Label Grid.Row="0" Grid.Column="6" HorizontalAlignment="Right" Margin="0,20,110.8,12">Überhöhung</Label>
                <Button Grid.Row="0" Grid.Column="6" Click="BtnVerschiebung_Click" Margin="70,20,30,17"
                        IsDefault="True"
                        MaxWidth="200" HorizontalAlignment="Right" Width="80">
                    Verschiebung
                </Button>
                <TextBox Name="Verschiebung" Text="1" Grid.Column="6" Margin="192,20,0,17"
                         HorizontalAlignment="Left" Width="20" LostFocus="BtnVerschiebung_Click" />
                <Button Grid.Row="0" Grid.Column="7" Click="BtnRotation_Click" Margin="0,20,52,17" IsDefault="True"
                        HorizontalAlignment="Right" Width="70">
                    Rotation
                </Button>
                <TextBox Name="Rotation" Text="1" Grid.Column="7" HorizontalAlignment="Left" Width="20"
                         Margin="86.2,20,0,17" LostFocus="BtnRotation_Click" />
            </Grid>
            <Canvas x:Name="VisualTragwerkErgebnisse" Height="660" Width="1200" ScrollViewer.CanContentScroll="True"
                    ScrollViewer.HorizontalScrollBarVisibility="Auto"
                    MouseLeftButtonDown="OnMouseLeftButtonDown"
                    MouseRightButtonDown="OnMouseRightButtonDown">
                <Popup x:Name="MyPopup" Placement="MousePoint">
                    <TextBlock x:Name="MyPopupText" Background="LightBlue" Foreground="Blue" Padding="10" />
                </Popup>
            </Canvas>
        </StackPanel>
    </ScrollViewer>
</Window>